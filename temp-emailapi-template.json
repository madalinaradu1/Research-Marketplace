{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Minimal emailapi template without adminDeleteUser references",
  "Parameters": {
    "authRoleName": {
      "Type": "String"
    },
    "unauthRoleName": {
      "Type": "String"
    },
    "functionsendEmailNotificationName": {
      "Type": "String"
    },
    "functionsendEmailNotificationArn": {
      "Type": "String"
    },
    "env": {
      "Type": "String"
    }
  },
  "Resources": {
    "emailapi": {
      "Type": "AWS::ApiGateway::RestApi",
      "Properties": {
        "Description": "Email API without delete user functionality",
        "Name": {
          "Fn::Join": [
            "",
            [
              "emailapi",
              "-",
              {
                "Ref": "env"
              }
            ]
          ]
        }
      }
    }
  },
  "Outputs": {
    "RootUrl": {
      "Description": "Root URL of the API gateway",
      "Value": {
        "Fn::Join": [
          "",
          [
            "https://",
            {
              "Ref": "emailapi"
            },
            ".execute-api.",
            {
              "Ref": "AWS::Region"
            },
            ".amazonaws.com/",
            {
              "Ref": "env"
            }
          ]
        ]
      }
    },
    "ApiName": {
      "Description": "API Friendly name",
      "Value": "emailapi"
    },
    "ApiId": {
      "Description": "API ID (prefix of API URL)",
      "Value": {
        "Ref": "emailapi"
      }
    }
  }
}